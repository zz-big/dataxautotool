{
  "job":{
    "setting":{
      "speed":{
        "channel":1
      },
      "errorLimit":{
        "record":0,
        "percentage":0.02
      }
    },
    "content":[
      {
        "reader":{
          "name":"mysqlreader",
          "parameter":{
            "username":"$username",
            "password":"$password",
            "connection":[
              {
                "querySql": [
                  "select $col from $table $where"
                ],
                "jdbcUrl": [
                  "$jdbcUrl"
                ]
              }
            ]
          }
        },
        "writer":{
          "name":"hdfswriter",
          "parameter":{
            "defaultFS":"$defaultFS",
            "fileType":"$fileType",
            "path":"$path",
            "fileName":"text",
            "hadoopConfig":{
              "dfs.nameservices":"ns1",
              "dfs.ha.namenodes.ns1":"nn1,nn2",
              "dfs.namenode.rpc-address.ns1.nn1":"192-168-1-xxx:9000",
              "dfs.namenode.rpc-address.ns1.nn2":"192-168-1-xxx:9000",
              "dfs.client.failover.proxy.provider.ns1":"org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider"
            },
            "column":[
"$column"
            ],
            "writeMode":"$writeMode",
            "fieldDelimiter":"$fieldDelimiter",
            "compress":"$compress"
          }
        }
      }
    ]
  }
}